{
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "strict": false,
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"],
        "@common/*": ["../*"]
      }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }